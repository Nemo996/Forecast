<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"

    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="12:00"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:id="@+id/image_weather"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
           />

        <TextView
            android:id="@+id/temp_for_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3Â°C"
            android:layout_below="@+id/time"
            />

        <TextView
            android:id="@+id/sky_for_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cliar sky"
            android:layout_below="@+id/temp_for_hour"
            />

        <TextView
            android:id="@+id/pressure_for_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prassure"
            android:layout_below="@+id/sky_for_hour"

            />

        <TextView
            android:id="@+id/humidity_for_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="humidity"
            android:layout_below="@+id/pressure_for_hour"

            />

        <TextView
            android:id="@+id/wind_for_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wind"
            android:layout_below="@+id/humidity_for_hour"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>
